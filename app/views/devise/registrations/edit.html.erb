<div class="clearfix">
  <div class="float-right w-75 p-5 mt-5">
    <h2 class="text-center">Edit profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Enter your email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password %> <i>(leave blank if you don"t want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter new password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm your password" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Enter current password" %>
      </div>

      <div class="form-group">
        <%= f.label :name, "Full name" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
      </div>

      <div class="form-group">
        <%= f.label :phone, "Telephone number" %>
        <%= f.text_field :phone, class: "form-control", placeholder: "Enter your telephone number" %>
      </div>

      <div class="form-group">
        <%= f.label :gender %>
        <%= f.select :gender, options_for_select(["Male", "Female"]), {}, class: "custom-select" %>
      </div>

      <div class="form-group">
        <%= f.label :avatar %>
        <div class="custom-file">
          <%= f.file_field :avatar, class: "custom-file-input"%>
          <%= f.label :avatar, "Choose file", class: "custom-file-label"%> <br>
        </div>
        <script>
          $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
          });
        </script>
      </div>

      <div class="form-group">
        <%= f.submit "Update", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
  <div class="float-left w-25 mt-5 text-center">
    <%= image_tag resource.avatar.url, style: "border-radius: 50%", class: "w-75 h-75" %>
    <h3 class = "text-danger">Delete account</h3>
    <p>Once you delete your account, there is no going back. Please be certain.</p>
    <%= button_to "Delete your account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger mb-5" %>
  </div>
</div>
