<div class="w-50 m-auto">
  <h2 class="text-center">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter your password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm your password" %>
    </div>

    <div class="form-group">
      <%= f.label :name, "Full name" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
    </div>

    <div class="form-group">
      <%= f.label :phone, "Telephone number" %>
      <%= f.text_field :phone, class: "form-control", placeholder: "Enter your telephone number" %>
    </div>

    <div class="form-group">
      <%= f.label :gender %>
      <%= f.select :gender, options_for_select(["Male", "Female"]), {}, class: "custom-select" %>
    </div>

    <div class="form-group">
      <%= f.label :avatar %>
      <div class="custom-file">
        <%= f.file_field :avatar, class: "custom-file-input" %>
        <%= f.label :avatar, "Choose file", class: "custom-file-label"%> <br>
      </div>
      <script>
        $(".custom-file-input").on("change", function() {
          var fileName = $(this).val().split("\\").pop();
          $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
      </script>
    </div>

    <div class="form-group">
      <div class="custom-control custom-checkbox">
          <%= f.check_box :role, {class: "custom-control-input"}, "teacher", "student" %>
          <%= f.label :role, "I'm teacher" , class: "custom-control-label"%>
        </div>
    </div>

    <div class="form-group">
      <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>
