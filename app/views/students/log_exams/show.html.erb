<h2 class="text-center">Total score: <%= @log_exam.score %></h2>
<% @log_exam.log_questions.each_with_index do |log_question, ques_index| %>
  <% question = @exam.questions[ques_index] %>
  <div class="shadow-lg p-4 mb-4 bg-white" style="border-radius: 1em">
    <span><b>Question <%= ques_index + 1 %>: </b></span>
    <span class="text-justify"><%= log_question.content %></span>
    <div class="ml-4">
      <br>
      <div class="card border-0">
        <div>
          <div class="card-body p-0">
            <ul class="list-group list-group-flush">
              <% log_question.log_answers.each_with_index do |log_answer, ans_index| %>
                <% answer = question.answers[ans_index] %>
                <% if log_answer.is_true %>
                  <li class="list-group-item custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="customCheck" name="example1" disabled checked>
                    <% if answer.is_true %>
                      <label class="custom-control-label text-dark" for="customCheck" style="background-color: #E6FFED"><%= log_answer.option %></label>
                    <% else %>
                      <label class="custom-control-label text-dark" for="customCheck"><%= log_answer.option %></label>
                    <% end %>
                  </li>
                <% else %>
                  <li class="list-group-item">
                    <input type="checkbox" class="custom-control-input" id="customCheck" name="example1" disabled>
                    <% if answer.is_true %>
                      <label class="custom-control-label text-dark" for="customCheck" style="background-color: #E6FFED"><%= log_answer.option %></label>
                    <% else %>
                      <label class="custom-control-label text-dark" for="customCheck"><%= log_answer.option %></label>
                    <% end %>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
