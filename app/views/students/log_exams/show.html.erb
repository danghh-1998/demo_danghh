<% @log_exam.log_questions.each_with_index do |log_question, index| %>
  <div class="shadow-lg p-4 mb-4 bg-white" style="border-radius: 1em">
    <span><b>Question <%= index + 1 %>: </b></span>
    <span class="text-justify"><%= log_question.content %></span>
    <div class="ml-4">
      <br>
      <div class="card border-0">
        <div>
          <div class="card-body p-0">
            <ul class="list-group list-group-flush">
              <% log_question.log_answers.each do |log_answer| %>
                <% if log_answer.is_true %>
                  <li class="list-group-item custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="customCheck" name="example1" disabled checked>
                    <label class="custom-control-label text-dark" for="customCheck"><%= log_answer.option %></label>
                  </li>
                <% else %>
                  <li class="list-group-item">
                    <input type="checkbox" class="custom-control-input" id="customCheck" name="example1" disabled>
                    <label class="custom-control-label text-dark" for="customCheck"><%= log_answer.option %></label>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
